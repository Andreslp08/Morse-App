<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >
<LinearLayout
    android:id="@+id/layoutPrincipalDialog"
    android:orientation="vertical"
    android:background="@drawable/grid_layout_abc"
    android:layout_width="370dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:text="Teclado"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/gothic"
        android:textStyle="bold">
    </TextView>

    <GridLayout
        android:id="@+id/gridLayoutTecladoNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:rowCount="4"
        android:columnCount="10">
    </GridLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/botonEspacioT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_boton2"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="______">
        </Button>
        <Button
            android:id="@+id/botonBorrarT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_boton2"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Borrar">
        </Button>
        <Button
            android:id="@+id/botonTraducir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_boton2"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:fontFamily="@font/impact"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Traducir">
        </Button>
    </LinearLayout>
</LinearLayout>
</LinearLayout>